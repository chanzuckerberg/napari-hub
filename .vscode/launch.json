  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "program": "node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--watchAll=false",
        "--config=jest/test.config.js"
      ],
      "cwd": "${workspaceFolder}/client",
      "disableOptimisticBPs": true,
      "windows": {
        "program": "node_modules/jest/bin/jest"
      }
    }
  ]
}
